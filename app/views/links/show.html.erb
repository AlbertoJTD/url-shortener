<div>
  <%= link_to 'Back', root_path, class: 'text-blue-500 hover:text-blue-700 underline mb-10' %>

  <h1 class="text-2xl font-bold"><%= @link.title %></h1>
  <p class="text-gray-500 bg-gray-100 p-4 rounded-md my-5">
    <%= @link.description %>
  </p>
  <%= link_to view_path(@link), class: 'text-blue-500 hover:text-blue-700 underline', target: :blank, data: { turbo: false } do %>
    <%= @link.url %>
    <span class="text-gray-500 text-sm"><%= @link.views_count %> views</span>
  <% end %>
</div>