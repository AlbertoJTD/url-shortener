<div>
  <%= link_to 'Back', root_path, class: 'text-blue-500 hover:text-blue-700 underline mb-10' %>

  <%= link_to 'Edit', edit_link_path(@link), class: 'bg-blue-500 text-white px-4 py-2 rounded-md mb-10 block w-fit hover:bg-blue-600' %>
  <%= link_to 'Delete', link_path(@link), class: 'bg-red-500 text-white px-4 py-2 rounded-md mb-10 block w-fit hover:bg-red-600', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this link?' } %>

  <%= button_tag "Copy", class: "font-medium px-2 py-1.5 rounded bg-gray-100 no-underline",
                             data: {
                               controller: "clipboard",
                               clipboard_text: view_url(@link)
                            } %>

  <%= render partial: 'links/link', locals: { link: @link } %>
  <h1 class="text-2xl font-bold"><%= @link.title %></h1>
  <p class="text-gray-500 bg-gray-100 p-4 rounded-md my-5">
    <%= @link.description %>
  </p>
  <%= link_to view_path(@link), class: 'text-blue-500 hover:text-blue-700 underline', target: :blank, data: { turbo: false } do %>
    <%= @link.url %>
    <span class="text-gray-500 text-sm"><%= @link.views_count %> views</span>
  <% end %>

  <%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago..Time.now, expand_range: true).count %>
</div>
