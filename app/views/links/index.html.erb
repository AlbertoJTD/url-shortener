<div class="max-w-[60%] mx-auto">
  <div class="flex justify-between items-center mb-5">
    <h1 class="text-2xl font-bold">URL Shortener</h1>

    <div>
      <% if user_signed_in? %>
        <%= link_to 'Profile', edit_user_registration_path, class: 'bg-gray-500 text-white px-4 py-2 rounded-md' %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'bg-red-500 text-white px-4 py-2 rounded-md' %>
      <% else %>
        <%= link_to 'Register', new_user_registration_path, class: 'bg-blue-500 text-white px-4 py-2 rounded-md' %>
        <%= link_to 'Login', new_user_session_path, class: 'bg-blue-100 text-blue-800 px-4 py-2 rounded-md' %>
      <% end %>
    </div>
  </div>

  <%= render partial: 'links/link_form', locals: { link: Link.new } %>

  <div id="links">
    <% @links.each do |link| %>
      <%= render partial: 'links/link', locals: { link: link } %>
    <% end %>

    <%== @pagy.series_nav %>
  </div>
</div>